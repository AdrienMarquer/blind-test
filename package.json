{
  "name": "blind-test",
  "version": "1.0.0",
  "devDependencies": {
    "typescript": "^5.3.3"
  },
  "private": true,
  "scripts": {
    "dev": "bun run dev:server & bun run dev:client",
    "dev:server": "cd apps/server && bun run dev",
    "dev:client": "cd apps/client && bun run dev --host",
    "build": "bun run build:server && bun run build:client",
    "build:server": "cd apps/server && bun run build",
    "build:client": "cd apps/client && bun run build",
    "test": "cd apps/server && bun test",
    "test:watch": "cd apps/server && bun test --watch",
    "test:coverage": "cd apps/server && bun test --coverage",
    "db:migrate": "cd apps/server && bunx drizzle-kit migrate",
    "db:studio": "cd apps/server && bunx drizzle-kit studio",
    "db:seed": "cd apps/server && bun run src/db/seed/seed-musiques.ts",
    "db:seed:dry": "cd apps/server && bun run src/db/seed/seed-musiques.ts --dry-run",
    "db:seed:metadata": "cd apps/server && bun run src/db/seed/seed-musiques.ts --no-download",
    "sync:vps": "bun scripts/sync-to-vps.ts",
    "sync:vps:dry-run": "bun scripts/sync-to-vps.ts --dry-run"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
